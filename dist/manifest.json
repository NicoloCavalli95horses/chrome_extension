{
  "name": "HTTP responses classifier",
  "description": "Identify likely sensitive HTTP responses in eligible web applications",
  "version": "0.1",
  "manifest_version": 3,
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "scripting"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ]
}